{
  "name": "snowman",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/hardhat",
      "packages/nextjs"
    ]
  },
  "scripts": {
    "account": "yarn workspace @snowman/hardhat account",
    "chain": "yarn workspace @snowman/hardhat chain",
    "fork": "yarn workspace @snowman/hardhat fork",
    "deploy": "yarn workspace @snowman/hardhat deploy",
    "verify": "yarn workspace @snowman/hardhat verify",
    "compile": "yarn workspace @snowman/hardhat compile",
    "generate": "yarn workspace @snowman/hardhat generate",
    "hardhat:lint": "yarn workspace @snowman/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @snowman/hardhat lint-staged",
    "test": "yarn workspace @snowman/hardhat test",
    "start": "yarn workspace @snowman/nextjs dev",
    "next:lint": "yarn workspace @snowman/nextjs lint",
    "next:format": "yarn workspace @snowman/nextjs format",
    "next:check-types": "yarn workspace @snowman/nextjs check-types",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "vercel": "yarn workspace @snowman/nextjs vercel",
    "vercel:yolo": "yarn workspace @snowman/nextjs vercel:yolo"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  },
  "dependencies": {
    "typewriter-effect": "^2.19.0"
  }
}
